          { x: 1, y: 32, w: 4, h: 2 },
          { x: 6, y: 33, w: 4, h: 2 },
          { x: 11, y: 33, w: 4, h: 2 },
          { x: 16, y: 33, w: 4, h: 2 },
          { x: 21, y: 32, w: 4, h: 2 }
        ];

        const keypad = document.getElementById("keypad");

        function callNativeKey(method, code) {
          const moduleRef = window.Module;
          if (moduleRef && typeof moduleRef.ccall === "function") {
            moduleRef.ccall(method, null, ["number"], [code]);
            return true;
          }
          if (moduleRef && typeof moduleRef[method] === "function") {
            moduleRef[method](code);
            return true;
          }
          return false;
        }

        function activateKey(btn) {
          btn.dataset.active = "true";
          const code = Number(btn.dataset.keyCode);
          if (!Number.isNaN(code)) {
            callNativeKey("Key_Input_key_down", code);
          }
        }

        function deactivateKey(btn) {
          btn.dataset.active = "false";
          const code = Number(btn.dataset.keyCode);
          if (!Number.isNaN(code)) {
            callNativeKey("Key_Input_key_up", code);
          }
        }

        function buildKeypad() {
          const unit = 12;
          const padding = 10;
          let maxX = 0;
          let maxY = 0;
          keyBoxes.forEach(function (box) {
            maxX = Math.max(maxX, box.x + box.w);
            maxY = Math.max(maxY, box.y + box.h);
          });

          const grid = document.createElement("div");
          grid.className = "keypad-grid";
          grid.style.width = (maxX * unit + padding * 2) + "px";
          grid.style.height = (maxY * unit + padding * 2) + "px";

          keyBoxes.forEach(function (box, index) {
            const btn = document.createElement("button");
            btn.type = "button";
            btn.className = "keypad-key";
            btn.dataset.keyId = keyIds[index];
            btn.dataset.keyCode = String(index + 1);
            btn.style.left = (box.x * unit + padding) + "px";
            btn.style.top = (box.y * unit + padding) + "px";
            btn.style.width = (box.w * unit) + "px";
            btn.style.height = (box.h * unit) + "px";

            const label = keypadLanguage === "english"
              ? keyNamesEnglish[index]
              : keyNamesFrench[index];
            btn.textContent = label;

            btn.addEventListener("pointerdown", function (event) {
              event.preventDefault();
              canvas.focus();
              btn.setPointerCapture(event.pointerId);
              activateKey(btn);
            });
            btn.addEventListener("pointerup", function (event) {
              event.preventDefault();
              deactivateKey(btn);
            });
            btn.addEventListener("pointercancel", function () {
              deactivateKey(btn);
            });
            btn.addEventListener("pointerleave", function () {
              deactivateKey(btn);
            });

            grid.appendChild(btn);
          });

          keypad.appendChild(grid);
        }

        function updateKeypadLabels() {
          const labels = keypadLanguage === "english" ? keyNamesEnglish : keyNamesFrench;
          const buttons = keypad.querySelectorAll(".keypad-key");
          buttons.forEach(function (btn, index) {
            btn.textContent = labels[index] || "";
          });
          langToggle.textContent = keypadLanguage === "english" ? "EN" : "FR";
        }

        buildKeypad();
        updateKeypadLabels();
        langToggle.addEventListener("click", function () {
          keypadLanguage = keypadLanguage === "english" ? "french" : "english";
          updateKeypadLabels();
        });
      })();
      var Module = {
        canvas: (function () {
          const canvas = document.getElementById("canvas");
          canvas.tabIndex = 0;
          canvas.focus();
          return canvas;
        })()
      };
    </script>
    <script src="@PORTCE_APP_JS@"></script>
  </body>
</html>
